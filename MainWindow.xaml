<Window x:Class="_312840HelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_312840HelloWorld"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label>Hello World. I am Nathan Peereboom</Label>
        <TextBox x:Name="txtName">Enter Your Name Here</TextBox>
        <Button x:Name="btnGreeting" Content="Click Me!" Click="btnGreeting_Click" />
    </StackPanel>
</Window>
